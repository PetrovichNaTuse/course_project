doctype html
html
    head
        meta(charset="utf-8")
        title #{title}
        link(rel="stylesheet" href="./css/reg.css")
    body
        .wrapper
            h1 #{text_h1}
            form#reg-form(action="/reg" method="POST" name="registration" enctype="multipart/form-data")
                label(for="name") Enter name: 
                    input#name(type="text" name="name" required)
                label(for="dob") Enter DOB: 
                    input#dob(type="date" name="dob" required)
                label(for="phone") Enter phone: 
                    input#phone(type="tel" name="phone" pattern="8-[0-9]{3}-[0-9]{3}-[0-9]{2}-[0-9]{2}" required)
                    span Format: 8-###-###-##-##
                label(for="email") Enter email: 
                    input#email(type="email" name="email" required)
                label(for="login") Enter login: 
                    input#login(type="text" name="login" required)
                label(for="password") Enter password: 
                    input#password(type="password" name="password" required)

                button(type="submit" name="sub") Registration
                button(type="reset") Reset

            .info-block Registration complete! Redirect to home at 5 sec...

        script(src="./check-input.js")
        script(src="./js/reg.js")
